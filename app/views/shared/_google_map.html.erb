<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8">
    <title>Sample_GoogleMap</title>
    <style>
      html { height: 100% }
      body { height: 100% }
      #map { height: 100%; width: 100% }
    </style>
  </head>
  <body>
    <div id="map"></div>

    <script>
      function initMap() {
        var map = new google.maps.Map(document.getElementById('map'), {
          center: {lat: 35.6811673, lng: 139.7670516},
          zoom: 15
        });

   // マーカーを追加する
    var tripCoordinates = <%= raw @trips.to_json %>; // トリップのリストをJavaScriptのオブジェクトに変換
    tripCoordinates.forEach(function(trip) {
      var geocoder = new google.maps.Geocoder();
      geocoder.geocode({ 'address': trip.address }, function(results, status) {
        if (status == 'OK') {
          var marker = new google.maps.Marker({
            map: map,
            position: results[0].geometry.location,
            title: trip.trip_title // 任意のタイトルを設定する
          });
        } else {
          console.log('Geocode was not successful for the following reason: ' + status);
        }
      });
    });
  }


      // Google Maps JavaScript APIが読み込まれた後に地図を作成する
      google.maps.event.addDomListener(window, 'load', initMap);
    </script>

    <!-- Google Maps JavaScript APIの読み込み -->
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDYCBhjyECXleS0TwFxXXaHbWBrR1keUk0&callback=initMap" async defer></script>
  </body>
</html>
