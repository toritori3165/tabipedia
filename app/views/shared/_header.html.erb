<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class='top-page-header'>
  <div class='search-bar-contents'>
    <%= link_to image_tag("furima-logo-color.png", class:"furima-icon"), "/" %>
    
    <%= form_with(url: search_trips_path, local: true, method: :get, class: "search-form") do |form| %>
      <%= form.text_field :keyword, placeholder: "キーワードから検索する", class: "input-box" %>
      <button class="search-button">
      <%= form.submit %>
      <%= image_tag "search.png", class:"search-icon" %>
      </button>
    <% end %> 

  </div>

  <div class='nav'>
    <ul class='lists-left'>
      <li><%= link_to 'カテゴリー', "#", class: "category-list" %></li>
      <li><%= link_to 'ブランド', "#", class: "category-list" %></li>
      <li>
        <%= link_to "旅行登録", new_trip_path, data: { turbo: false }, class: "navi_btn" %>
        <% @trips.each do |trip| %>
          <%= link_to trip.trip_title, trip_path(trip.id), data: { turbo: false }, class: "navi_btn" %>
        <% end %>
      </li>
    </ul>
    <ul class='lists-right'>
      <% if user_signed_in? %>
        <li><%= link_to current_user.nickname, "#", class: "user-nickname"  %></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, data: {turbo_method: :delete}, class: "logout" %></li>
      <% else %>
        <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
        <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
      <% end %>
    </ul>
  </div>
  
</header>